{% extends "base.jinja" %}

{% block title %}
    Calendar
{% endblock %}

{% block content %}
    <div id='calendar'></div>

    <!-- This might be only HTML we need in this file. -->
    <div id="create-event-modal-container"></div>

    <div id="eventDetailModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Event Detail</h4>
                    <i class="fa fa-clock-o"></i>&nbsp;&nbsp;<span id="start-time"></span> &mdash; <span id="end-time"></span>
                </div>
                <div class="modal-body">
                    <ul class="fa-ul">
                        <li><i class="fa-li fa fa-map-marker"></i><span id="location"></span></li>
                        <li><i class="fa-li fa fa-calendar"></i><span id="description"></span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}