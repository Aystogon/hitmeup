{% extends "base.jinja" %}

{% block title %}
    Profile
{% endblock %}

{% block content %}
    <div id="header">
        <div id="header-upper-half">
            <div id="header-upper-half-content" class="container">
                <div id="username-container">
                    <h2>{{ profile.username }}</h2>
                    <div id="firstlastname-container">
                        {{ profile.first_name }} {{ profile.last_name }}
                    </div>
                </div>
            </div>
        </div>
        <div id="header-lower-half">
            <div id="header-lower-half-content" class="container">
                <img src="http://i.ytimg.com/vi/82yHd99YxnY/maxresdefault.jpg"
                     alt=""
                     id ="pic"
                     class="img-thumbnail">
                <div id="button-container">
                    <a href="" id="friend-button">
                        Add as Friend
                    </a>
                </div>
            </div>
        </div>

        
    </div>
{% endblock %}