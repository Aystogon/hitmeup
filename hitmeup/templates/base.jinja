<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        <title>{% block title %}HitMeUp{% endblock %}</title>
        <meta name="description" content="HitMeUp">

        <link rel="shortcut icon" type="image/ico" href="{{ static('favicon.ico') }}"/>
        <link rel="apple-touch-icon" href="{{ static('apple-touch-icon.png') }}">

        {# CSS - Vendor #}
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
        {% for sheet in ext_css %}
            <link rel="stylesheet" type="text/css" href="{{ sheet }}">
        {% endfor %}

        {# CSS - Custom #}
        <link rel="stylesheet" type="text/css" href="{{ static('hitmeup/css/base.css') }}">
        {% for sheet in css %}
            <link rel="stylesheet" type="text/css" href="{{ static(sheet) }}">
        {% endfor %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% include 'navbar.jinja' %}

        {% block content %}{% endblock %}

        {# JS - Vendor #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.7.0/lodash.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        {% for script in ext_js %}
            <script src="{{ script }}"></script>
        {% endfor %}

        {# JS - Custom #}
        <script src="{{ static('hitmeup/js/base.js') }}"></script>
        {% for script in js %}
            <script src="{{ static(script) }}"></script>
        {% endfor %}
    </body>
</html>
