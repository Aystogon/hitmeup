<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('static_pages:home') }}">
                <img class="logo" src="{{ static('hitmeup/img/hitmeup_small.png') }}" />
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-main">

            <ul class="nav navbar-nav">
                {% for entry in navbar_entries %}
                    <li class="
                    {% if entry.active %}
                        active
                    {% endif %}
                    ">
                        <a href="{{ url(entry.view) }}">
                            {{ entry.name }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {% if user.is_authenticated() %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Welcome back {{ user.username }}! <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li><a href="{{ url('login:logout') }}">Logout</a></li>
                        </ul>
                    </li>

                {% else %}
                    <li class="
                        {% if view == 'login:signup' %}
                            active
                        {% endif %}
                    ">
                        <a href="{{ url('login:signup') }}">
                            Sign Up
                        </a>
                    </li>
                    <li class="
                        {% if view == 'login:login' %}
                            active
                        {% endif %}
                    ">
                        <a href="{{ url('login:login') }}">
                            Log In
                        </a>
                    </li>
                {% endif %}
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>