{% extends "base.jinja" %}

{% block title %}
    Search Results
{% endblock %}

{% block content %}
    <div id="main-content">
        <div class="container">
            {% for result in results %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="panel panel-default">
                        <div class="profile-info panel-body">
                            <div class="profile-pic-container">
                                <img src="{{ result.gravatar_url }}" class="profile-pic img-thumbnail">
                            </div>
                            <div class="profile-info-container overflow-control">
                                <ul class="fa-ul info-container">
                                    <li>
                                        <i class="fa fa-li fa-user"></i>
                                        <a href="{{ result.profile_url }}">
                                            {{ result.username }}
                                        </a>
                                    </li>
                                    {% if result.full_name %}
                                        <li>
                                            <em>
                                                {{ result.full_name }}
                                            </em>
                                        </li>
                                    {% endif %}
                                    {% if result.is_friend or user.profile == result %}
                                        {% if result.is_free %}
                                            <li><i class="fa fa-li fa-check-circle free-icon"></i><span class="info free">Free</span></li>
                                        {% else %}
                                            <li><i class="fa fa-li fa-clock-o busy-icon"></i><span class="info busy">Busy</span></li>
                                        {% endif %}

                                        <li><i class="fa fa-li fa-envelope"></i>
                                            {% if result.email %}
                                                <a href="mailto:{{ result.email }}">{{ result.email }}</a>
                                            {% else %}
                                                <a href="#">—</a>
                                            {% endif %}
                                        </li>
                                        <li><i class="fa fa-li fa-phone"></i>
                                            {% if result.phone %}
                                                <a href="tel:{{ result.phone }}">{{ result.phone }}</a>
                                            {% else %}
                                                <a href="#">—</a>
                                            {% endif %}
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="panel panel-default">
                    <div class="panel-body no-results-panel">
                        <em>
                            No results found for your query. Try another search item.
                        </em>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
