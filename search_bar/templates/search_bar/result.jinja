{% extends "base.jinja" %}


{% block title %}
    Results
{% endblock %}

{% block content %}
    <div class="main_content">

        {% if not results %}
             <h2> Suggestions</h2>
            <div class="jumbotron">
                <p>No results found for your query. Try another search item.</p>
            </div>

        {% endif %}
        <div class="result-list">
            <div class="container">
        {% for result in results %}
{#            {{ result }}#}
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="profile-info panel-body">
                                <div class="profile-pic-container">
                                    <img src= {{ "http:" ~ result.gravatar_url }}> </img>
                                </div>
                                <div class="profile-info-container overflow-control">
                                    <ul class="fa-ul info-container">
                                        <li><i class="fa fa-li fa-user"></i><a href="{{ result.profile_url }}">{{ result.first_name ~" " ~ result.last_name ~" ("~result.username~")"}}</a></li>
                                        {% if 'phone' in result %}

                                            {% if result.is_free %}
                                                <li><i class="fa fa-li fa-check-circle free-icon"></i><span class="info free">Free</span></li>
                                            {% else %}
                                                 <li><i class="fa fa-li fa-clock-o busy-icon"></i><span class="info busy">Busy</span></li>
                                            {% endif %}

                                            <li><i class="fa fa-li fa-envelope"></i>
                                                {% if result.email %}
                                                    <a href="mailto:" ~ result.email>{{ result.email }}</a>
                                                {% else %}
                                                    <a href="mailto:#"></a>
                                                {% endif %}
                                            </li>
                                                <li><i class="fa fa-li fa-phone"></i>
                                                    {% if result.phone %}
                                                        <a href="tel:" ~ result.phone>{{ result.phone }}</a>
                                                    {% else %}
                                                        <a href="tel:#">-</a>
                                                    {% endif %}
                                                </li>
                                        {% else %}
                                            <li><i class="fa fa-li fa-minus unfriend"></i><span class="info unfriend">Not friends</span></li>
                                            <li><i class="fa fa-li fa-envelope"></i>-</li>
                                            <li><i class="fa fa-li fa-phone"></i>-</li>


                                        {% endif %}
                                    </ul>

                                </div>
                            </div>
                        </div>
                    </div>
        {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}